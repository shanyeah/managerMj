<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:background="@color/white">
    <com.imovie.mogic.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </com.imovie.mogic.widget.TitleBar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar"
        android:descendantFocusability="afterDescendants">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="会员身份"
                    android:textSize="16sp"
                    android:textColor="@color/T1"/>
                <TextView
                    android:id="@+id/tv_member_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:textColor="@color/T2"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/T2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="会员类型"
                android:textSize="16sp"
                android:textColor="@color/T1"/>
            <TextView
                android:id="@+id/tvCardCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_alignParentRight="true"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/T1"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/T2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="现金帐户"
                android:textSize="16sp"
                android:textColor="@color/T1"/>
            <TextView
                android:id="@+id/tvCashBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/T4"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/T2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="赠送帐户"
                android:textSize="16sp"
                android:textColor="@color/T1"/>
            <TextView
                android:id="@+id/tv_give_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/T4"/>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/T2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center"
            android:text="充值金额"
            android:textSize="16sp"
            android:textColor="@color/T1"/>
        <LinearLayout
            android:id="@+id/ll_card_rights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/llRightOne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_write_r5_l5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_right_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="50"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/T4"/>
                <TextView
                    android:id="@+id/tvRightOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/T4"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRightTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_write_r5_l5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_right_money_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="100"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/T4"/>
                <TextView
                    android:id="@+id/tvRightTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/T4"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llRightThree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_write_r5_l5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_right_money_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="200"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/T4"/>
                <TextView
                    android:id="@+id/tvRightThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/T4"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llRightFour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_write_r5_l5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_right_money_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="300"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/T4"/>
                <TextView
                    android:id="@+id/tvRightFour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/T4"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_two_rights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/llRightFive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_write_r5_l5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_right_money_Five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="500"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/T4"/>
                <TextView
                    android:id="@+id/tv_right_Five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/T4"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llRightSix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_write_r5_l5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_right_money_six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1000"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/T4"/>
                <TextView
                    android:id="@+id/tv_right_six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/T4"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llRightSeven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_write_r5_l5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_right_money_seven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2000"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/T4"/>
                <TextView
                    android:id="@+id/tv_right_seven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/T4"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llRightEight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:visibility="invisible"
                android:background="@drawable/shape_write_r5_l5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_right_money_eight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:paddingTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/T4"/>
                <TextView
                    android:id="@+id/tv_right_eight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/T4"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其它金额："
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/T1"/>
            <EditText
                android:id="@+id/etChargeNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/T4"
                android:padding="5dp"
                android:gravity="center"
                android:inputType="number"
                android:background="@drawable/shape_write_r5_l5"
                android:hint="请输入充值金额"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvSendNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="3dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/T5"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center"
            android:text="支付方式"
            android:textSize="16sp"
            android:textColor="@color/T1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/T2"/>

        <RelativeLayout
            android:id="@+id/rlChargePayChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/click_white_gray_no_stoke"
            android:layout_margin="12dp">
            <ImageView
                android:id="@+id/iv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_launcher"/>
            <TextView
                android:id="@+id/tv_chat_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_pay"
                android:text="微信支付"
                android:textSize="16sp"
                android:textColor="@color/T1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/tv_chat_pay"
                android:layout_toRightOf="@+id/iv_pay"
                android:text="支持微信5.0及以上版本"
                android:textSize="16sp"
                android:textColor="@color/T2"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_right_next"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/T2"/>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
