<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/BG3">
    <RelativeLayout
        android:id="@+id/rlNameState"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:id="@+id/viewType"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:background="@color/BG5"/>
        <TextView
            android:id="@+id/tvTypeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/viewType"
            android:text="金卡权益"
            style="@style/text_14_T2"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rlNameState"
        android:background="@color/L1"/>
</RelativeLayout>