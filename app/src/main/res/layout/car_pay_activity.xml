<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/white">
    <com.imovie.mogic.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </com.imovie.mogic.widget.TitleBar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar">
        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/llCarPayMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="名字"
                        style="@style/text_18_T1"/>
                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_name"
                        android:layout_marginLeft="10dp"
                        android:text="手机号："
                        style="@style/text_18_T1"/>

                    <TextView
                        android:id="@+id/tvNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_below="@+id/tv_name"
                        android:text="565223"
                        style="@style/text_14_T2" />
                    <TextView
                        android:id="@+id/tvSeatNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_below="@+id/tvNumber"
                        android:text="5"
                        style="@style/text_14_T2"/>

                    <TextView
                        android:id="@+id/tvCashBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvSeatNo"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="0"
                        style="@style/text_14_T5" />


                    <ImageView
                        android:id="@+id/ivNextState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/arrow_right_next"/>
                    <TextView
                        android:id="@+id/tvBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/ivNextState"
                        android:layout_marginRight="5dp"
                        android:layout_alignBaseline="@+id/tvSeatNo"
                        android:text="5"
                        style="@style/text_14_T5"/>
                    <TextView
                        android:id="@+id/tvPresentBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/ivNextState"
                        android:layout_marginRight="5dp"
                        android:layout_alignBaseline="@+id/tvCashBalance"
                        android:text="5"
                        style="@style/text_14_T5"/>
                    <TextView
                        android:id="@+id/tvMemberClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_name"
                        android:layout_toLeftOf="@+id/ivNextState"
                        android:layout_marginRight="5dp"
                        android:text=""
                        style="@style/text_14_T2"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/L1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/stgName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="店"
                style="@style/text_16_T1"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"/>
            <com.imovie.mogic.widget.NoScrollListView
                android:id="@+id/lvCarList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:background="@color/white" />
            <TextView
                android:id="@+id/tv_sum_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="小计: ¥0.00"
                style="@style/text_16_T2"
                android:paddingTop="6dp"/>
            <TextView
                android:id="@+id/tvDiscountAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="减免金额: ¥0.00"
                style="@style/text_16_T2"
                android:paddingTop="6dp"/>
            <TextView
                android:id="@+id/tvIncomeAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="应付金额: ¥0.00"
                style="@style/text_16_T2"
                android:paddingTop="6dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="10dp"
                android:background="@color/L1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="支付方式"
                style="@style/text_16_T1"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"/>
            <RelativeLayout
                android:id="@+id/rlScanPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/tvScanPay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="扫码支付"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    style="@style/text_16_T2" />
                <ImageView
                    android:id="@+id/ivScanPay"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/box_select"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlMemberPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/tvMemberPay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="会员卡支付"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_centerVertical="true"
                    style="@style/text_16_T2" />
                <ImageView
                    android:id="@+id/ivMemberPay"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/box_unselect"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="10dp"
                android:background="@color/L1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical"
                    android:text="座位号："
                    style="@style/text_16_T1" />
                <EditText
                    android:id="@+id/etUserId"
                    android:layout_width="200dp"
                    android:layout_height="32dp"
                    android:textColor="@color/T2"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:background="@drawable/shape_write_r5_l5"
                    android:hint="请输入桌号"
                    android:textSize="14sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:visibility="gone"
                android:background="@color/L1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="备注"
                    style="@style/text_16_T1" />

                <EditText
                    android:id="@+id/etPayRemark"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:hint="请输入"
                    android:gravity="center_vertical"
                    style="@style/text_16_T2"
                    android:background="@color/white"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="85dp"
                android:background="@color/L1"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/car_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#454545">
        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="总计:"
            style="@style/text_16_white" />

        <TextView
            android:id="@+id/car_limit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/BG8"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="确认支付"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </RelativeLayout>

</RelativeLayout>
