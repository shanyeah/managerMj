<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/rlSearchTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/BG2"
        android:orientation="horizontal">
        <com.imovie.mogic.widget.ClearButtonEditText
            android:id="@+id/etHomeSearch"
            style="@style/ActionEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_centerVertical="true"
            android:cursorVisible="true"
            android:drawableLeft="@drawable/home_tr_sousuo"
            android:drawableRight="@drawable/login_clear"
            android:hint="附近美食"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="16"
            android:singleLine="true"
            android:textColorHint="@color/T3"
            android:background="@drawable/bg_corner_white"
            android:textCursorDrawable="@null" />
        <RelativeLayout
            android:id="@+id/rlShopCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tvSumPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="0.00"
                style="@style/text_16_white"/>
            <ImageView
                android:id="@+id/ivShopCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tvSumPrice"
                android:background="@drawable/shop_cart"/>
            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_data"
                android:gravity="center"
                android:text="0"
                android:textSize="10sp"
                android:singleLine="true"
                android:visibility="invisible"
                android:layout_toLeftOf="@+id/tvSumPrice"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </LinearLayout>
    <com.imovie.mogic.widget.PullToRefreshFrameLayout
        android:id="@+id/pull_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlSearchTitle">
        <com.imovie.mogic.widget.FlexibleFrameLayout
            android:id="@+id/ff_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/rlCharge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_ad"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.imovie.mogic.widget.YSBPageListView
                        android:id="@+id/lvGoodsTypeList"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:scrollbars="none"
                        android:layout_height="wrap_content"/>

                    <com.imovie.mogic.widget.YSBPageListView
                        android:id="@+id/lv_card_list"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </com.imovie.mogic.widget.FlexibleFrameLayout>
    </com.imovie.mogic.widget.PullToRefreshFrameLayout>

</RelativeLayout>
