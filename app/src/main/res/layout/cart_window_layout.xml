<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp"
    android:background="@color/BG14">
        <ListView
            android:id="@+id/listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:cacheColorHint="#00000000"
            android:background="@color/white"
            android:scrollbars="none">
        </ListView>

        <LinearLayout
            android:id="@+id/rlPayState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/listview"
            android:orientation="vertical"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvBalancePay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="帐号"
                    android:background="@color/BG4"
                    style="@style/text_16_T2"/>
                <TextView
                    android:id="@+id/tvWechatPay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@color/BG2"
                    android:text="支付宝/微信"
                    style="@style/text_16_T2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送餐桌号:"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    style="@style/text_14_T3"/>
                <EditText
                    android:id="@+id/etSeatNum"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="3dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@drawable/shape_write_r5_l5"
                    android:hint="输入桌号"
                    style="@style/text_14_T1"/>
                <ImageView
                    android:id="@+id/ivSeatScan"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/home_more_scan"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tvMemberInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="付款帐号:"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    style="@style/text_14_T3"/>
                <EditText
                    android:id="@+id/etMemberNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="3dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@drawable/shape_write_r5_l5"
                    android:hint="输入桌号/手机号/证件后6位"
                    style="@style/text_14_T1"/>
                <TextView
                    android:id="@+id/tvMember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="3dp"
                    android:gravity="center"
                    style="@style/text_14_T1"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:id="@+id/ivCartClear"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/cart_clear"/>
                <Button
                    android:id="@+id/btCartPay"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/select_bg8_bg1_r4"
                    android:text="结算"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>
            </RelativeLayout>


        </LinearLayout>

</RelativeLayout>
