<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <com.imovie.mogic.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </com.imovie.mogic.widget.TitleBar>


    <com.imovie.mogic.widget.PullToRefreshFrameLayout
        android:id="@+id/pull_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar">
    <com.imovie.mogic.widget.FlexibleFrameLayout
        android:id="@+id/ff_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.imovie.mogic.widget.RoundedImageView
                    android:id="@+id/profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/person_default_profile"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/tvNameOval"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:background="@drawable/oval_bg7_bg7"
                    android:text="信善"
                    android:visibility="gone"
                    style="@style/text_12_white"/>
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/profile"
                    android:gravity="center"
                    android:text="信"
                    style="@style/text_16_T2"/>
                <TextView
                    android:id="@+id/tvClockGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="考勤组:开发组"
                    style="@style/text_16_T3"
                    android:layout_alignBottom="@+id/profile"
                    android:layout_toEndOf="@+id/profile" />
                <TextView
                    android:id="@+id/tvClockTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="5dp"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/icon_down"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="2017.12.13"
                    style="@style/text_16_T3"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/L1"/>

            <com.imovie.mogic.widget.NoScrollListView
                android:id="@+id/lvClockList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:divider="#00000000"
                android:dividerHeight="0dip">
            </com.imovie.mogic.widget.NoScrollListView>
            <RelativeLayout
                android:id="@+id/rlClockButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvClock"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:background="@drawable/oval_bg7_bg7"
                    android:text="上班打卡"
                    android:paddingBottom="10dp"
                    style="@style/text_16_white"/>
                <TextClock
                    android:id="@+id/digitalClock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="38dp"
                    android:gravity="center"
                    android:format24Hour="HH:mm:ss"
                    android:textColor="#fbffbb"
                    android:textSize="12sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlClockArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvClockArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="考勤范围:国际采购中心"
                        android:lines="1"
                        android:maxEms="12"
                        android:ellipsize="end"
                        style="@style/text_14_T2"/>
                    <TextView
                        android:id="@+id/tvOpenArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:visibility="visible"
                        android:text="去重新定位"
                        style="@style/text_14_T7"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlNoAttendData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/ivNoData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/attend_no_data"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp" />
                <TextView
                    android:id="@+id/tvNoData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/ivNoData"
                    android:text="今天没有排班安排"
                    style="@style/text_16_T3"/>
            </RelativeLayout>

        </LinearLayout>
    </com.imovie.mogic.widget.FlexibleFrameLayout>
    </com.imovie.mogic.widget.PullToRefreshFrameLayout>

</RelativeLayout>
