<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.imovie.mogic.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </com.imovie.mogic.widget.TitleBar>
    <ImageView
        android:id="@+id/ivHomeScan"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:background="@drawable/home_more_scan"/>
    <TextView
        android:id="@+id/tvHomeHall"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:text="设置"
        android:padding="10dp"
        android:lines="1"
        android:ellipsize="end"
        android:maxEms="9"
        android:gravity="center"
        android:drawableRight="@drawable/icon_down"
        android:drawablePadding="5dp"
        style="@style/text_18_white"/>

    <com.imovie.mogic.widget.PullToRefreshFrameLayout
        android:id="@+id/pull_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar"
        android:descendantFocusability="afterDescendants">
        <com.imovie.mogic.widget.FlexibleFrameLayout
            android:id="@+id/ff_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="afterDescendants">
            <RelativeLayout
                android:id="@+id/homeSlideBanner_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/title_bar">
                <LinearLayout
                    android:id="@+id/ll_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:orientation="vertical">
                    <com.imovie.mogic.home.adbanner.AdSlideBanner
                        android:id="@+id/home_ad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/home_hall_image"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/L1"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="今日实时概览"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            style="@style/text_16_T3"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/L1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/totalPayAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                style="@style/text_16_T1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="营业金额"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="20dp"
                                android:gravity="center"
                                style="@style/text_16_T3"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/totalIncomeAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                style="@style/text_16_T1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="收入金额"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="20dp"
                                android:gravity="center"
                                style="@style/text_16_T3"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/goodsSaleBillCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                style="@style/text_16_T1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="商品单数"
                                android:layout_marginTop="1dp"
                                android:gravity="center"
                                style="@style/text_16_T3"/>
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/L1"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/goodsIncomeAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                style="@style/text_16_T1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="商品收入"
                                android:layout_marginTop="1dp"
                                android:gravity="center"
                                style="@style/text_16_T3"/>
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/L1"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/rechargeSaleBillCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                style="@style/text_16_T1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="充值单数"
                                android:layout_marginTop="1dp"
                                android:gravity="center"
                                style="@style/text_16_T3"/>
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/L1"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/rechargeIncomeAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                style="@style/text_16_T1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="充值收入"
                                android:layout_marginTop="1dp"
                                android:gravity="center"
                                style="@style/text_16_T3"/>
                        </LinearLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/tvHallAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="50dp"
                            android:text="我有"
                            android:lines="1"
                            android:ellipsize="end"
                            android:textSize="16sp"
                            android:textColor="@color/T1"/>
                        <TextView
                            android:id="@+id/tvHallTel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvHallAddress"
                            android:text="电话:"
                            android:textSize="14sp"
                            android:textColor="@color/T2"/>
                        <TextView
                            android:id="@+id/tvHallTelNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_below="@+id/tvHallAddress"
                            android:layout_toRightOf="@+id/tvHallTel"
                            android:text="189"
                            android:textSize="14sp"
                            android:textColor="@color/T2"/>

                        <ImageView
                            android:id="@+id/ivHallPhone"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/ico_phone"
                            android:layout_alignBottom="@+id/tvHallTelNum"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/L1"/>
                    <LinearLayout
                        android:id="@+id/llAuthCodeList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/menuName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="店面运营"
                            android:textColor="@color/T2"
                            android:textSize="16sp"/>
                        <com.imovie.mogic.widget.NoScrollGridView
                            android:id="@+id/gvClassification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:numColumns="3">
                        </com.imovie.mogic.widget.NoScrollGridView>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="@color/L1"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="26dp">

                        <TextView
                            android:id="@+id/tvCommentState"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dp"
                            android:text="会员点评:"
                            android:textColor="@color/T2"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/tvCommentNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tvCommentState"
                            android:layout_marginTop="5dp"
                            android:text="(0)"
                            android:textColor="@color/T2"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/ratingBarScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dp"
                            android:text="10分"
                            android:textColor="@color/T3"
                            android:textSize="14sp" />

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="@style/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/ratingBarScore"
                            android:numStars="5"
                            android:visibility="gone"
                            android:stepSize="2"/>
                    </RelativeLayout>
                </LinearLayout>

                    <com.imovie.mogic.widget.YSBCommentListView
                        android:id="@+id/lvRatingList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_ad">
                    </com.imovie.mogic.widget.YSBCommentListView>
                <TextView
                    android:id="@+id/tvNoData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="暂无评论"
                    android:layout_below="@+id/ll_ad"/>
            </RelativeLayout>
        </com.imovie.mogic.widget.FlexibleFrameLayout>
    </com.imovie.mogic.widget.PullToRefreshFrameLayout>
</RelativeLayout>
