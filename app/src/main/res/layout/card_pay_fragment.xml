<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/pay_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/BG1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvMemberPay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:text="刷卡支付"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/tvChargeMoney"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:text="会员卡充值"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/tvMemberUpgrade"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:text="会员卡升级"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pay_title_bar">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_card_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_card_image" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/BG5"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="卡号"
                    android:textSize="16sp"
                    android:textColor="@color/T1"/>
                <TextView
                    android:id="@+id/tvCardNoFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:textColor="@color/T2"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/T2"/>
        <RelativeLayout
            android:id="@+id/rlMoneyAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="现金帐户"
                android:textSize="16sp"
                android:textColor="@color/T1"/>
            <TextView
                android:id="@+id/tv_pay_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:textColor="@color/T4"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_right_next"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/T2"/>
        <RelativeLayout
            android:id="@+id/rlGiveAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="赠送帐户"
                android:textSize="16sp"
                android:textColor="@color/T1"/>
            <TextView
                android:id="@+id/tv_give_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:textColor="@color/T4"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_right_next"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/BG5"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="会员类型"
                android:textSize="16sp"
                android:textColor="@color/T1"/>
            <TextView
                android:id="@+id/tvCardCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_alignParentRight="true"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/T1"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/T2"/>
        <TextView
            android:id="@+id/tv_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="金卡权益"
            android:background="@color/white"
            android:textColor="@color/T4"
            android:textSize="20sp"/>
        <LinearLayout
            android:id="@+id/ll_card_rights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_right_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"
                android:background="@drawable/shape_write_r5_l5"
                android:text=""
                android:padding="5dp"
                android:textColor="@color/T4"/>
            <TextView
                android:id="@+id/tv_right_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_write_r5_l5"
                android:text=""
                android:padding="5dp"
                android:textColor="@color/T4"/>
            <TextView
                android:id="@+id/tv_right_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_write_r5_l5"
                android:text=""
                android:padding="5dp"
                android:textColor="@color/T4"/>
            <TextView
                android:id="@+id/tv_right_four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_write_r5_l5"
                android:text=""
                android:padding="5dp"
                android:textColor="@color/T4"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
