<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <com.imovie.mogic.widget.PullToRefreshFrameLayout
        android:id="@+id/pull_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.imovie.mogic.widget.FlexibleFrameLayout
            android:id="@+id/ff_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/rlCharge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llCarPayMember"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <RelativeLayout
                        android:id="@+id/rlNoUserData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:visibility="visible">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:gravity="center"
                        android:text="选择充择用户"
                        style="@style/text_18_T1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/arrow_right_next"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlUserData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="名字"
                            style="@style/text_18_T1"/>
                        <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_name"
                            android:layout_marginLeft="20dp"
                            android:text="手机号："
                            style="@style/text_18_T1"/>

                        <TextView
                            android:id="@+id/tvNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_below="@+id/tv_name"
                            android:text="565223"
                            style="@style/text_14_T2" />
                        <TextView
                            android:id="@+id/tvBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_below="@+id/tvNumber"
                            android:text="5"
                            style="@style/text_14_T5"/>
                        <TextView
                            android:id="@+id/tvCashBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="35dp"
                            android:layout_alignBaseline="@+id/tvBalance"
                            android:gravity="center_vertical"
                            android:text="0"
                            style="@style/text_14_T5" />
                        <TextView
                            android:id="@+id/tvPresentBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_below="@+id/tvBalance"
                            android:text="5"
                            style="@style/text_14_T5"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/arrow_right_next"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/L1"/>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="选择充值金额(元):"
                    style="@style/text_16_T3"/>

                <com.imovie.mogic.widget.NoScrollGridView
                    android:id="@+id/gvChargeList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:horizontalSpacing="10dp"
                    android:verticalSpacing="3dp"
                    android:numColumns="3">
                </com.imovie.mogic.widget.NoScrollGridView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="其它金额："
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/T1"/>
                    <EditText
                        android:id="@+id/etChargeNum"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:textColor="@color/T4"
                        android:padding="5dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:background="@drawable/shape_write_r5_l5"
                        android:hint="请输入充值金额"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tvPresentAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:text=""
                        android:padding="3dp"
                        android:gravity="center"
                        style="@style/text_16_T2"/>


                </LinearLayout>

                <Button
                    android:id="@+id/btChargeCard"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/select_bg8_bg1_r4"
                    android:text="充值"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>

            </LinearLayout>
        </com.imovie.mogic.widget.FlexibleFrameLayout>
    </com.imovie.mogic.widget.PullToRefreshFrameLayout>



</RelativeLayout>
